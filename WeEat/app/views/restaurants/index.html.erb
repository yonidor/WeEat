<%= link_to "Add new restaurant", new_restaurant_path %>

<h1>Restaurants list</h1>

<ul>
  <% @restaurants.each do |rest| %>
      <li>
        <%= link_to rest.name, rest %>
        <%= link_to 'Delete', restaurant_path(rest),
                    method: :delete,
                    data: { confirm: 'Are you sure?' } %>
      </li>
  <% end %>
</ul>